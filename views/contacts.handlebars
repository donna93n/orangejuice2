<!DOCTYPE html> 
<head>
<!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>-->
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
<link href="css/bootstrap.css" rel="stylesheet" media="screen">
<link rel="stylesheet" href="css/bootstrap-switch.css">
<link href="css/style.css" rel="stylesheet" media="screen">

</head>

<body onload="run()">
	<div id="title-bar">
		<table style="width:100%">
			<tr>
			<td>
				<div id="backContainer">
				<img id="back" class="imgBtn" src="img/chevron-left.png"/>
				</div>
			</td>
			
			<td class="title">
				<h1 style="font-size: 30px;">Edit Contacts</h1>
			</td>
				
			<td class="menuCol">
				<div class="btn-group menu">
				<button class="btn"  data-toggle="dropdown" id="menuBtn">
				<i class="icon-th-list"></i>
				</button>
					<ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu">
						<li><a tabindex="-1" href="/">Home</a></li>
						<li><a tabindex="-1" href="/help">Help</a></li>
						<li><a tabindex="-1" href="/login">Sign out</a></li>
					 </ul>
				</div>
				
			</td>
			</tr>
		</table>
	</div>

	<div id="contactspg" style="clear:both;">
		<!--<div style="width: 100%;">
			<input id="searchbar" type="text" autocomplete="off" data-provide="typeahead" placeholder="Search Contacts">
		</div>-->
		<p class="instr">Select contacts to allow calls/texts from</p>
		<table id="contactsList" style="width: 100%;">
		
		{{#each contacts}}
		<tr>
		<td>
			<p class="contactNames">{{name}}</p>
		</td>
		<td>
			<div style="float: right;" class="btn-group" data-toggle="buttons-checkbox">
			  <button type="button" class="btn">
				<img src="img/call icon.png"/>
			  </button>
			  <button type="button" class="btn">
				<i class="icon-comment"></i>
			  </button>
			</div>
		</td>
		
		</tr>
		{{/each}}
		
		</table>
		
		<div class="bottomrow">
			<button id="cancel" class="btn btn-default btn-large formBtn cancelBtn">Cancel</button>
			<button class="btn btn-primary btn-large formBtn saveBtn">Save</button>
		</div>
	</div>


    <script type="text/javascript">
	function run(){
		$('.btn').button();
		$('#back').click(function() {
			window.history.back(); 
		});

		$('#cancel').click(function() {
			window.history.back();
		});
		
		$('.saveBtn').click(function() {
			window.history.back();
		});
	}
    </script>

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-switch.js"></script>
</body>

</html>
