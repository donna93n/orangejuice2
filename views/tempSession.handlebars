<!DOCTYPE html> 
<head>
<!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>-->
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
<link href="css/bootstrap.css" rel="stylesheet" media="screen">
<link rel="stylesheet" href="css/bootstrap-switch.css">
<link href="css/style.css" rel="stylesheet" media="screen">

</head>

<body onload="run()">
	<div id="title-bar">
		<table style="width:100%">
			<tr>
			<td>
				<div id="backContainer">
				<img id="back" class="imgBtn" src="img/chevron-left.png"/>
				</div>
			</td>
			
			<td class="title">
				<h1 id="tmpTitle">One Time Session</h1>
			</td>
				
			<td class="menuCol">
				<div class="btn-group menu">
				<button class="btn"  data-toggle="dropdown" id="menuBtn">
				<i class="icon-th-list"></i>
				</button>
					<ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu">
						<li><a tabindex="-1" href="/">Home</a></li>
						<li><a tabindex="-1" href="/help">Help</a></li>
						<li><a tabindex="-1" href="/login">Sign out</a></li>
					 </ul>
				</div>
				
			</td>
			</tr>
		</table>
	</div>

	<div id="addpg" style="clear:both;">
		<p class="instr">Create a temporary activity that will not be saved after use</p>
		<div style="width: 100%; clear: both;">
			<p class="labels smText">Allowed Contacts</p>
			<button id="editContacts" class="btn btn-default editBtn">Edit</button>
		</div>
		
		<div style="width: 100%; clear:both; padding-top:10px;">
			<p class="labels smText">Blocked Apps</p>
			<button id="editApps" class="btn btn-default editBtn">Edit</button>
		</div>
		
		
		<div class="bottomrow">
			<button id="cancel" class="btn btn-default btn-large formBtn cancelBtn">Cancel</button>
			<button class="btn btn-primary btn-large formBtn saveBtn">Run</button>
		</div>
	</div>


    <script type="text/javascript">
	function run(){
		$('.btn').button();
		$('#back').click(function() {
			window.history.back(); 		
		});

		$('#cancel').click(function() {
			window.location= '/activity';
		});

		$('#editContacts').click(function() {
			window.location= '/contacts';
		});
		
		$('#editApps').click(function() {
			window.location= '/apps';
		});
		
		$('.saveBtn').click(function() {
			localStorage.setItem('activityName', "One Time Session");
			window.location= '/';
		});



	}
    </script>

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-switch.js"></script>
</body>

</html>
